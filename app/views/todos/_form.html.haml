= form_for @todo do |f|
  -if @todo.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@todo.errors.count, "error")} prohibited this todo from being saved:"
      %ul
        - @todo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :summary
    = f.text_field :summary
  .field
    = f.label :detail
    = f.text_field :detail
  .field
    = f.label :progress
    = f.text_field :progress
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
